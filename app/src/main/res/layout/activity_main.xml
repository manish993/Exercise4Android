<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".complaint register">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="suffix" />

                    <Spinner
                        android:id="@+id/suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1" />
                </TableRow>


                <TableRow android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:hint="first name" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:hint="last name" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employment status" />

                    <Spinner
                        android:id="@+id/spEmpStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:entries="@array/employment" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designation" />

                    <Spinner
                        android:id="@+id/spDesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:entries="@array/designation" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/st_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="street no" />

                    <EditText
                        android:id="@+id/streetname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="street name" />


                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/txtProvince"
                        android:layout_width="30dp"

                        android:layout_height="wrap_content"
                        android:hint="provinence" />

                    <EditText
                        android:id="@+id/txtCity"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:hint="city" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/txtCountry"
                        android:layout_width="30dp"

                        android:layout_height="wrap_content"
                        android:hint="country" />

                    <EditText
                        android:id="@+id/txtPostalCode"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="postalcode" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:duplicateParentState="false">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <EditText
                        android:id="@+id/txt_Email"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:hint="Email id" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/txtCountrycode"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="country code" />

                    <EditText
                        android:id="@+id/txtCellNo"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="cell number" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" issue date" />

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:hint="dd/mm/yy" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type of issue" />

                    <Spinner
                        android:id="@+id/spIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:entries="@array/issue" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="severity " />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:filterTouchesWhenObscured="false"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="detail description " />

                    <EditText
                        android:id="@+id/txtdescription"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:hint=" " />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button

                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="SUBMIT" />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="Clear" />
                </TableRow>


            </TableLayout>
        </ScrollView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>